<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".vista_usuario.opciones_menu_user.reservas.VerReservas"
    android:orientation="vertical"
    android:padding="20dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:src="@drawable/icono_apppadel"
        />


    <Button
        android:id="@+id/botonReservarPistaVentanaVerReservas"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="Reservar Pista"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:textSize="24dp"
        android:backgroundTint="@color/blue_app"
        app:cornerRadius="15dp"
        android:textColor="@color/white"
        />

    <Button
        android:id="@+id/botonConsultarReservasUsuario"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="Consultar Reservas"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:textSize="24dp"
        android:backgroundTint="@color/blue_app"
        app:cornerRadius="15dp"
        android:textColor="@color/white"
        />

</LinearLayout>