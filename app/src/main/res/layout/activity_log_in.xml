<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".ActividadInicioSesion">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:src="@drawable/icono_apppadel"
        />

    <TextView
        android:id="@+id/tvCorreoElectronico"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Correo Electrónico: "
        android:textAlignment="textStart"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="40dp"
        android:textSize="25dp"
        />

    <EditText
        android:id="@+id/etCorreo"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:inputType="textEmailAddress"
        android:background="@drawable/style_background_fields"
        />

    <TextView
        android:id="@+id/tvContrasena"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contraseña: "
        android:textAlignment="textStart"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:textSize="25dp"

        />

    <EditText
        android:id="@+id/etContra"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:inputType="textPassword"
        android:background="@drawable/style_background_fields"
        />

    <Button
        android:id="@+id/botonInicioSesion"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:text="Iniciar Sesión"
        android:textSize="24dp"
        app:cornerRadius="15dp"
        android:backgroundTint="@color/blue_app"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/botonUsuario"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_gravity="left"
            android:text="User"
            android:textSize="24dp"
            app:cornerRadius="15dp"
            android:backgroundTint="@color/blue_app"
            />

        <Button
            android:id="@+id/botonSocio"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_gravity="right"
            android:text="Socio"
            android:textSize="24dp"
            app:cornerRadius="15dp"
            android:backgroundTint="@color/blue_app"
            android:layout_marginLeft="100dp"
            />

    </LinearLayout>




</LinearLayout>