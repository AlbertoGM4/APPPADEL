<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".vista_propietario.opciones_menu_principal.GestionarUsuarios">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:src="@drawable/icono_apppadel"
        />

    <Button
        android:id="@+id/botonAltaUser"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="Alta de Usuario"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:textSize="24dp"
        android:backgroundTint="@color/blue_app"
        app:cornerRadius="15dp"
        android:textColor="@color/white"
        />

    <Button
        android:id="@+id/botonBajaUser"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="Baja de Usuario"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:textSize="24dp"
        android:backgroundTint="@color/blue_app"
        app:cornerRadius="15dp"
        android:textColor="@color/white"
        />

    <Button
        android:id="@+id/botonEditarUser"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="Editar Usuario"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:textSize="24dp"
        android:backgroundTint="@color/blue_app"
        app:cornerRadius="15dp"
        android:textColor="@color/white"
        />


</LinearLayout>