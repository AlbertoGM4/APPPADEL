<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".vista_propietario.opciones_menu_principal.gestion_torneos.SeleccionGanadores">

    <TextView
        android:id="@+id/tvTituloGestionTorneo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/style_title_menu"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:paddingRight="20dp"
        android:paddingBottom="5dp"
        android:text="@string/gestion_torneso"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="29dp" />

    <TextView
        android:id="@+id/tvNombreTorneo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:paddingRight="20dp"
        android:paddingBottom="5dp"
        android:text="@string/nombre_torneo"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/tvNombreTorneoSeleccionGanadores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/style_background_fields"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:paddingRight="20dp"
        android:paddingBottom="5dp"
        android:text="Torneo 1"
        android:textSize="25dp"
        android:layout_marginBottom="30dp"/>

    <TextView
        android:id="@+id/tvNombreIntegrante1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/style_background_fields"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:paddingRight="20dp"
        android:paddingBottom="5dp"
        android:text="Primer Integrante"
        android:textSize="25dp"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        />
    <Button
        android:id="@+id/botonIntegrante1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="@color/blue_app"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:text="Buscar Usuario"
        android:textSize="25dp"
        app:cornerRadius="15dp"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/tvNombreIntegrante2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/style_background_fields"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:paddingRight="20dp"
        android:paddingBottom="5dp"
        android:text="Segundo Integrante"
        android:textSize="25dp"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        />

    <Button
        android:id="@+id/botonIntegrante2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="@color/blue_app"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:text="Buscar Usuario"
        android:textSize="25dp"
        app:cornerRadius="15dp"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/botonConfirmarGanadores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/blue_app"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:text="Confirmar Ganadores"
        android:textSize="28dp"
        app:cornerRadius="15dp"
        android:textColor="@color/white"/>

</LinearLayout>